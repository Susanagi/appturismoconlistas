<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Bellohorizonte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posada De los Dioses"
        android:textSize="26dp"
        android:textStyle="bold"
        app:flow_firstHorizontalBias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035" />

    <ImageView
        android:id="@+id/fotorestaurante"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:scaleType="fitXY"
        android:src="@drawable/comida"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Bellohorizonte"
        app:layout_constraintVertical_bias="0.04" />

    <TextView
        android:id="@+id/Contacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contacto Susana Giraldo"
        android:textSize="20dp"
        android:textStyle="bold"
        app:flow_firstHorizontalBias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Telefono"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefono 3242310182"
        android:textSize="20dp"
        android:textStyle="bold"
        app:flow_firstHorizontalBias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fotorestaurante"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/limiteprecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80.000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:flow_firstHorizontalBias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Contacto"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/platorecomendado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trucha frita "
        android:textSize="20dp"
        android:textStyle="bold"
        app:flow_firstHorizontalBias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/limiteprecio"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>